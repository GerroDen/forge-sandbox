root = true

[*]
end_of_line = lf
#trim_trailing_whitespace=true
indent_style = space
insert_final_newline = true
indent_size = 4
block_comment_start = /*
block_comment_end = */

# Without intentation: .properties
[{*.dart,*.json,*.scss,*.yaml,*.yml,*.rules,*.m,*.mjml}]
indent_size = 2

# Document explicit decision for 4 spaces
[{*.ts,*.js,*.vue,*.html,*.css,*.xml,*.gradl,*.entitlement,*.pug}]
indent_size = 4

[/dev/tooling/templates/**]
indent_size = unset
