{
  "extends": "@tsconfig/vite-react/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "bridge/*": ["../bridge/src/*"]
    }
  },
  "include": ["src", ".storybook/**/*"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
