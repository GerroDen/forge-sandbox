{
  "name": "forge-sandbox",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "npm": ">=8",
    "node": ">=16"
  },
  "workspaces": [
    "app",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "env $(cat .env.local | xargs) NODE_ENV=development turbo run dev",
    "forge-deploy": "./forge-wrapper.sh deploy",
    "forge-install": "./forge-wrapper.sh install",
    "forge-lint": "./forge-wrapper.sh lint",
    "forge-login": "./forge-wrapper.sh login",
    "forge-register": "./forge-wrapper.sh register",
    "forge-restore": "./forge-wrapper.sh restore",
    "forge-tunnel": "./forge-wrapper.sh tunnel && cd app/dist && forge tunnel",
    "forge-tunnel:local": "cd app/dist && FORGE_DEV_TUNNEL=true forge tunnel",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@swc/core": "^1.3.69",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jest": "^29.6.1",
    "jest-extended": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "turbo": "^1.10.7",
    "typescript": "^5.1.6"
  },
  "overrides": {
    "@types/history": "^5.0.0",
    "@types/react": "~16.14.30",
    "@types/react-dom": "~16.9.16"
  }
}
